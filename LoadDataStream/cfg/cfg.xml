<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
  <bean id="ignite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration">

    <property name="workDirectory" value="work"/>

    <property name="gridLogger">
      <bean class="org.apache.ignite.logger.log4j2.Log4J2Logger">
        <!-- log4j2 configuration file -->
        <constructor-arg type="java.lang.String" value="ignite-log4j.xml"/>
      </bean>
    </property>

    <property name="dataStorageConfiguration">
      <bean class="org.apache.ignite.configuration.DataStorageConfiguration">
        <property name="checkpointFrequency" value="5000"/>
        <property name="defaultDataRegionConfiguration">
          <bean class="org.apache.ignite.configuration.DataRegionConfiguration">
            <property name="persistenceEnabled" value="true"/>
            <property name="maxSize" value="#{400 * 1024 * 1024}"/>
          </bean>
        </property>
      </bean>
    </property>

    <property name="cacheConfiguration">
      <list>
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
          <property name="name" value="default"/>
          <property name="atomicityMode" value="ATOMIC"/>
          <property name="backups" value="0"/>
          <property name="affinity">
            <bean class="org.apache.ignite.cache.affinity.rendezvous.RendezvousAffinityFunction">
              <constructor-arg type="boolean" value="false"/>
              <constructor-arg type="int" value="10"/>
            </bean>
          </property>

          <!-- Configure query entities -->
          <property name="sqlSchema" value="PUBLIC"/>
          <property name="queryEntities">
            <list>
              <bean class="org.apache.ignite.cache.QueryEntity">
                <property name="tableName" value="TIMEDATA"/>
                <property name="valueType" value="TimedataValPart"/>
                <property name="keyType" value="TimedataKeyPart"/>

                <property name="fields">
                  <map>
                    <entry key="OBJECT_ID" value="java.lang.Long"/>
                    <entry key="PARAM_ID" value="java.lang.Long"/>
                    <entry key="SERIES_TIME" value="java.util.Date"/>
                    <entry key="VALUE" value="java.lang.Double"/>
                    <entry key="PERIOD_ID" value="java.lang.String"/>
                    <entry key="ANALYTIC_ID" value="java.lang.String"/>
                    <entry key="UNIT_ID" value="java.lang.Long"/>
                  </map>
                </property>

                <property name="keyFields">
                  <set>
                    <value>OBJECT_ID</value>
                    <value>PARAM_ID</value>
                    <value>SERIES_TIME</value>
                    <value>PERIOD_ID</value>
                    <value>ANALYTIC_ID</value>
                  </set>
                </property>

                <property name="indexes">
                  <list>
                    <bean class="org.apache.ignite.cache.QueryIndex">
                      <constructor-arg value="OBJECT_ID"/>
                    </bean>
                    <bean class="org.apache.ignite.cache.QueryIndex">
                      <constructor-arg>
                        <list>
                          <value>SERIES_TIME</value>
                          <value>PERIOD_ID</value>
                          <value>ANALYTIC_ID</value>
                        </list>
                      </constructor-arg>
                      <constructor-arg value="SORTED"/>
                    </bean>
                  </list>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>

    <!--<property name="sqlConfiguration">
        <bean class="org.apache.ignite.configuration.SqlConfiguration">
            <property name="queryEnginesConfiguration">
                <list>
                    <bean class="org.apache.ignite.indexing.IndexingQueryEngineConfiguration">
                        <property name="default" value="true"/>
                    </bean>
                    <bean class="org.apache.ignite.calcite.CalciteQueryEngineConfiguration">
                        <property name="default" value="false"/>
                    </bean>
                </list>
            </property>
        </bean>
    </property>-->

    <property name="discoverySpi">
      <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
        <property name="ipFinder">
          <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.multicast.TcpDiscoveryMulticastIpFinder">
            <property name="addresses">
              <list>
                <value>127.0.0.1:47500..47509</value>
              </list>
            </property>
          </bean>
        </property>
      </bean>
    </property>
  </bean>
</beans>
